<mvc:View controllerName="cv.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="_IDGenVBox1">
                <!-- Personal Info & Image -->
                <HBox id="_IDGenHBox1" class="sapUiSmallMargin">
                    <VBox id="_IDGenVBox2">
                        <Image id="_IDGenImage1" src="/images/face.jpeg" width="100px" height="100px" class="circleImage"/>
                    </VBox>
                    <VBox id="_IDGenVBox3" class="sapUiSmallMargin">
                        <Label id="_IDGenLabel1" text="Name: Ruben Bonte"/>
                        <Label id="_IDGenLabel2" text="Email: bonte_ruben@yahoo.com"/>
                        <Label id="_IDGenLabel3" text="Phone: +40 771 033 276"/>
                        <!-- Add other contact details if needed -->
                    </VBox>
                </HBox>

                <!-- CV Details -->
                <IconTabBar id="_IDGenIconTabBar1">
                    <items>
                        <!-- Work Experience -->
                        <IconTabFilter id="_IDGenIconTabFilter1" text="Work" icon="sap-icon://work-history">
                            <Table id="_IDGenTable1" items="{path: '/workExperience'}">
                                <columns>
                                    <Column id="_IDGenColumn1">
                                        <Text id="_IDGenText1" text="Company" />
                                    </Column>
                                    <Column id="_IDGenColumn2">
                                        <Text id="_IDGenText2" text="Role" />
                                    </Column>
                                    <Column id="_IDGenColumn3">
                                        <Text id="_IDGenText3" text="Duration" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem1">
                                        <cells>
                                            <Text id="_IDGenText4" text="{company}" />
                                            <Text id="_IDGenText5" text="{role}" />
                                            <Text id="_IDGenText6" text="{duration}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                        <!-- Projects -->
                        <IconTabFilter id="_IDGenIconTabFilter2" icon="sap-icon://open-folder" text="Projects">
                            <Table id="_IDGenTable2" items="{path: '/projects'}">
                                <columns>
                                    <Column id="_IDGenColumn4">
                                        <Text id="_IDGenText7" text="Project Name" />
                                    </Column>
                                    <Column id="_IDGenColumn5">
                                        <Text id="_IDGenText8" text="Description" />
                                    </Column>
                                    <Column id="_IDGenColumn6">
                                        <Text id="_IDGenText9" text="Technologies Used" />
                                    </Column>
                                    <Column id="_IDGenColumn7">
                                        <Text id="_IDGenText10" text="Link" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem2">
                                        <cells>
                                            <Text id="_IDGenText11" text="{name}" />
                                            <Text id="_IDGenText12" text="{description}" />
                                            <Text id="_IDGenText13" text="{technologies}" />
                                            <Text id="_IDGenText14" text="{link}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>

                        <!-- Skills -->
                        <IconTabFilter id="_IDGenIconTabFilter3" text="Skills" icon="sap-icon://lead">
                            <List id="_IDGenList1" items="{path: '/skills'}">
                                <items>
                                    <StandardListItem id="_IDGenStandardListItem1" title="{name}" description="{level}" />
                                </items>
                            </List>
                        </IconTabFilter>

                        <!-- Education -->
                        <IconTabFilter id="_IDGenIconTabFilter4" text="Education" icon="sap-icon://education">
                            <Table id="_IDGenTable3" items="{path: '/education'}">
                                <columns>
                                    <Column id="_IDGenColumn8">
                                        <Text id="_IDGenText15" text="Institution" />
                                    </Column>
                                    <Column id="_IDGenColumn9">
                                        <Text id="_IDGenText16" text="Degree" />
                                    </Column>
                                    <Column id="_IDGenColumn10">
                                        <Text id="_IDGenText17" text="Year" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem3">
                                        <cells>
                                            <Text id="_IDGenText18" text="{institution}" />
                                            <Text id="_IDGenText19" text="{degree}" />
                                            <Text id="_IDGenText20" text="{year}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </VBox>
        </content>
    </Page>
</mvc:View>
